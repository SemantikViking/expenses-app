# Receipt Processing Application - Default Configuration Template
# Copy this file to .env and customize the values for your setup

# =============================================================================
# AI Vision Settings (REQUIRED)
# =============================================================================

# AI provider to use for vision processing
# Options: openai, anthropic, local
AI_VISION__PROVIDER=openai

# AI model to use (depends on provider)
# OpenAI: gpt-4-vision-preview, gpt-4o-vision
# Anthropic: claude-3-vision, claude-3-5-sonnet
AI_VISION__MODEL=gpt-4-vision-preview

# API key for the AI service (REQUIRED - replace with your actual key)
AI_VISION__API_KEY=your_openai_api_key_here

# Maximum number of retry attempts for failed API calls
AI_VISION__MAX_RETRIES=3

# Minimum confidence score to accept extraction results (0.0 to 1.0)
AI_VISION__CONFIDENCE_THRESHOLD=0.8

# Timeout for AI API calls in seconds
AI_VISION__TIMEOUT_SECONDS=30

# =============================================================================
# File System Monitoring Settings (REQUIRED)
# =============================================================================

# Folder to monitor for new receipt images (REQUIRED - set to your receipts folder)
MONITORING__WATCH_FOLDER=/Users/username/Desktop/Receipts

# Supported image file extensions
MONITORING__FILE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".heic"]

# Seconds between folder checks for new files
MONITORING__PROCESSING_INTERVAL=5

# Maximum number of receipts to process simultaneously
MONITORING__MAX_CONCURRENT_PROCESSING=3

# =============================================================================
# Data Extraction Settings
# =============================================================================

# Enable/disable specific data extraction features
EXTRACTION__EXTRACT_VENDOR=true
EXTRACTION__EXTRACT_DATE=true
EXTRACTION__EXTRACT_AMOUNT=true
EXTRACTION__EXTRACT_CURRENCY=true

# Supported date formats for parsing extracted dates
EXTRACTION__DATE_FORMATS=["%Y-%m-%d", "%m/%d/%Y", "%d/%m/%Y"]

# Default currency code when currency cannot be detected
EXTRACTION__DEFAULT_CURRENCY=GBP

# =============================================================================
# Email Integration Settings (Optional)
# =============================================================================

# Enable email functionality (set to true to activate email features)
EMAIL__ENABLE_EMAIL=false

# SMTP server configuration
EMAIL__SMTP_SERVER=smtp.gmail.com
EMAIL__SMTP_PORT=587

# SMTP credentials (required if email is enabled)
EMAIL__SMTP_USERNAME=your_email@gmail.com
EMAIL__SMTP_PASSWORD=your_app_password_here

# Default recipient for receipt emails
EMAIL__DEFAULT_RECIPIENT=accounting@yourcompany.com

# Path to email templates directory
EMAIL__EMAIL_TEMPLATES_PATH=./templates

# =============================================================================
# Payment Tracking Settings (Optional)
# =============================================================================

# Enable payment tracking functionality
PAYMENT__ENABLE_PAYMENT_TRACKING=false

# Supported payment systems
PAYMENT__PAYMENT_SYSTEMS=["manual", "quickbooks", "xero"]

# Default payment system to use
PAYMENT__DEFAULT_PAYMENT_SYSTEM=manual

# Enable automatic payment reconciliation
PAYMENT__AUTO_RECONCILE=false

# =============================================================================
# Data Storage Settings
# =============================================================================

# Path to the main processing log file
STORAGE__LOG_FILE_PATH=./receipt_processing_log.json

# Enable automatic backups
STORAGE__BACKUP_ENABLED=true

# Hours between automatic backups
STORAGE__BACKUP_INTERVAL_HOURS=24

# Maximum log entries before file rotation
STORAGE__MAX_LOG_ENTRIES=10000

# =============================================================================
# Application Logging Settings
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOGGING__LOG_LEVEL=INFO

# Path to application log file
LOGGING__LOG_FILE=./logs/receipt-processor.log

# Maximum log file size in MB before rotation
LOGGING__MAX_LOG_SIZE_MB=10

# Number of backup log files to keep
LOGGING__BACKUP_COUNT=5

# Enable Pydantic Logfire integration for advanced monitoring
LOGGING__ENABLE_LOGFIRE=true

# =============================================================================
# Optional: Advanced Settings
# =============================================================================

# Pydantic Logfire token (for advanced monitoring - optional)
# LOGFIRE_TOKEN=your_logfire_token_here

# Custom API endpoints (for local AI models - advanced users only)
# AI_VISION__BASE_URL=http://localhost:8000/v1
# AI_VISION__API_VERSION=v1
